<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="3" android:versionName="1.0.2" package="com.lastedit.towerfinder">

    <uses-sdk android:minSdkVersion="10" android:targetSdkVersion="16"/>

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <uses-feature android:name="android.hardware.sensor.compass" android:required="true"/>

    <application android:allowBackup="true" android:icon="@drawable/compass_icon" android:label="@string/app_name" android:theme="@style/AppTheme">
        <activity android:label="@string/app_name" android:name="com.lastedit.towerfinder.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_tower_search" android:name="com.lastedit.towerfinder.TowerSearch" android:parentActivityName=".SettingsActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value=".SettingsActivity"/>
            <intent-filter>
                <action android:name=".TowerSearch.TV_Stations"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name=".TowerSearch.FM_Stations"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name=".TowerSearch.AM_Stations"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/title_activity_settings" android:name="com.lastedit.towerfinder.SettingsActivity" android:parentActivityName="MainActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="MainActivity"/>
        </activity>
    </application>

</manifest>
